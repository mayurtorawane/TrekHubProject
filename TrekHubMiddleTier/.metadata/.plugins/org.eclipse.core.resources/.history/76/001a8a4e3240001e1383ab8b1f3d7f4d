package com.example.demo.entities;

import java.sql.Date;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.OneToOne;
import javax.persistence.Table;

@Entity
@Table(name="trekbooking")
public class TrekBooking {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	int booking_id;
	
	@Column
	Date booking_date;
	
	@OneToOne
	@JoinColumn(name="trekker_id")
	User user_id;
	
	@OneToOne
	@JoinColumn(name="plantrek_id")
    PlanTrek plantrek;
	
	@Column
	int members;
	
	@Column
	double amount;

	public TrekBooking() {
		super();
		// TODO Auto-generated constructor stub
	}

	public TrekBooking(Date booking_date, User user_id, PlanTrek plantrek, int members, double amount) {
		super();
		this.booking_date = booking_date;
		this.user_id = user_id;
		this.plantrek = plantrek;
		this.members = members;
		this.amount = amount;
	}

	public int getBooking_id() {
		return booking_id;
	}

	public void setBooking_id(int booking_id) {
		this.booking_id = booking_id;
	}

	public Date getBooking_date() {
		return booking_date;
	}

	public void setBooking_date(Date booking_date) {
		this.booking_date = booking_date;
	}

	public User getUser_id() {
		return user_id;
	}

	public void setUser_id(User user_id) {
		this.user_id = user_id;
	}

	public PlanTrek getPlantrek() {
		return plantrek;
	}

	public void setPlantrek(PlanTrek plantrek) {
		this.plantrek = plantrek;
	}

	public int getMembers() {
		return members;
	}

	public void setMembers(int members) {
		this.members = members;
	}

	public double getAmount() {
		return amount;
	}

	public void setAmount(double amount) {
		this.amount = amount;
	}
	
	
	
}
